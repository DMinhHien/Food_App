<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/silver"
    tools:context=".MainActivity2"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="0dp">



    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/group_tab"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="horizontal"
        android:background="@color/white"
        android:gravity="center">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latest"
            android:layout_weight="1"
            android:button="@color/trans"
            android:drawableBottom="@drawable/baseline_keyboard_arrow_down_24"
            android:textAlignment="center"
            android:textColor="@drawable/radio_changetext"
            android:background="@drawable/custom_changebackground"
            android:checked="true"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:layout_weight="1"
            android:button="@color/trans"
            android:drawableBottom="@drawable/baseline_keyboard_arrow_down_24"
            android:textAlignment="center"
            android:textColor="@drawable/radio_changetext"
            android:background="@drawable/custom_changebackground"/>
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HCM"
            android:layout_weight="1"
            android:button="@color/trans"
            android:drawableBottom="@drawable/baseline_keyboard_arrow_down_24"
            android:textAlignment="center"
            android:textColor="@drawable/radio_changetext"
            android:background="@drawable/custom_changebackground"/>
    </RadioGroup>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/group_tab">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Nearby"
                    android:textAllCaps="false" />

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Orders"
                    android:textAllCaps="false"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="E-card"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Coupon"
                    android:textAllCaps="false"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/white"
                    app:backgroundTint="@color/white"
                    android:textColor="@color/black"
                    android:layout_margin="5dp"
                    android:text="Reviews"
                    android:textAllCaps="false"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:text="Reservations"
                    android:textColor="@color/black"
                    app:backgroundTint="@color/white"
                    android:textAllCaps="false"/>

            </LinearLayout>

            <view
                class="androidx.appcompat.app.AlertController$RecycleListView"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </view>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>